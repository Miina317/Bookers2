
<div class="container">
  <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
      <thead>
        <%= image_tag @user.get_profile_image(100,100), alt: "no_image.jpg" %>
      </thead>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <p class="text-center">
        <%= link_to edit_user_path(@user) do %>
          <i class="fas fa-user-cog text-dark"></i>
        <% end %>
      </p>
     <%= render 'books/create', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
 
 
<h2>Book detail</h2>    
<table class="table table-hover">
  <tr>
    <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image(100, 100), alt: "no_image.jpg" %>
          <% end %>
          <p><%= link_to user_path(@book.user.id) do %><%= @book.user.name %><% end %></p>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %><%= @book.title %><% end %>
        </td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
  <td><%= link_to "Edit", edit_book_path(@book) %></td>
  <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
<% end %>
</tr>
  
</table>
  </div>
</div>
</div>