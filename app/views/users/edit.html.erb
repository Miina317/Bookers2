<%= flash[:notice] %>
<h2>User info</h2>

     <% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <div>
      <br>
      <label for="inputName">Name</label></br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  </div>
  
  <div>
      <br>
  <label for="inputImage">Image</label></br>
  <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %>  
  </div>
  
  <br><label for="inputIntroduction">Introduction</label></br>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>
  </div>
  
  <br><%= f.submit "Update User" %></br
<% end %>
