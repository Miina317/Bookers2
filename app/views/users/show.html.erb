<div class="container">
  <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
      <thead>
        <%= image_tag @user.get_profile_image(100,100), alt: "no_image.jpg" %>
      </thead>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <p class="text-center">
        <%= link_to edit_user_path(@user) do %>
          <i class="fas fa-user-cog text-dark"></i>
        <% end %>
      </p>
     <%= render 'books/create', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
 
  <h2>Books</h2>
<table class="table table-hover">
 <thread>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
 </thread>
<% @books.each do |book| %>
<tr>
  <td> <%= image_tag @user.get_profile_image(100,100) %></td>
  <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
  <td><%= book.body %></td>
  <% end %>
  </tr>
</table>
  </div>
</div>
